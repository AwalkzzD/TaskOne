<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.taskone.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_employeeFragment"
            app:destination="@id/employeeFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_carManufacturersFragment"
            app:destination="@id/carManufacturersFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_carModelFragment"
            app:destination="@id/carModelFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_productsFragment"
            app:destination="@id/productsFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/employeeFragment"
        android:name="com.example.taskone.fragments.EmployeeFragment"
        android:label="Employee Data"
        tools:layout="@layout/fragment_employee" />
    <fragment
        android:id="@+id/carManufacturersFragment"
        android:name="com.example.taskone.fragments.CarManufacturersFragment"
        android:label="Car Manufacturers Data"
        tools:layout="@layout/fragment_car_manufacturers" />
    <fragment
        android:id="@+id/carModelFragment"
        android:name="com.example.taskone.fragments.CarModelFragment"
        android:label="Car Models Data"
        tools:layout="@layout/fragment_car_model" />
    <fragment
        android:id="@+id/productsFragment"
        android:name="com.example.taskone.fragments.ProductsFragment"
        android:label="Products Data"
        tools:layout="@layout/fragment_products" />

</navigation>